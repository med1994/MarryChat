<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".StartActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Welcom To Marry chat"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/have_account_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Al ready have account"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/Star_regist_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/have_account_btn"
        android:text="@string/need_a_new_account" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/have_account_btn"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="12dp"
        app:srcCompat="@drawable/icon" />

</RelativeLayout>
